<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bantoo.babooo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.InputKodeRegistrasiActivity"></activity>
        <activity android:name=".Controller.SignUpActivity.KodeRegistrasiNoFoundActivity" />
        <activity android:name=".Controller.SignUpActivity.LocationSignUpActivity"></activity>
        <activity android:name=".Controller.SignUpActivity.NoHpSignUpActivity" />
        <activity android:name=".Controller.SignUpActivity.PasswordSignUpActivity" />
        <activity android:name=".Controller.SignUpActivity.EmailSignUpActivity" />
        <activity android:name=".Controller.SignUpActivity.NamaSignUpActivity" />
        <activity
            android:name=".Controller.SignUpActivity.SignUpActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Controller.HomeActivity" />
        <activity android:name=".Controller.VerificationActivity" />
        <activity
            android:name=".Controller.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Controller.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>