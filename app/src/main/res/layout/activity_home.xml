<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Pages.HomePage.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/menuItem"
            app:itemBackground="@color/green"
            app:itemTextColor="@color/greenPrimary"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/nav_items"></com.google.android.material.bottomnavigation.BottomNavigationView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:id="@+id/mainFrame"
            android:layout_alignTop="@id/menuItem"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

</LinearLayout>