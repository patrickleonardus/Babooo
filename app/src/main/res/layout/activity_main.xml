<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.MainActivity"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="100dp"
    android:layout_marginRight="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/logo_bantoo"/>

    <TextView
        android:textStyle="bold"
        android:textSize="48px"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomorHPTV"
        android:text="Masukan nomor handphone" />

    <TextView
        android:textSize="36px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk dengan nomor handphone anda yang telah terdaftar"/>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_border">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/bendera_indonesia"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="48px"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+62"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/phoneNumberET"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="your phone number"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login"
        android:onClick="loginButton"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum memiliki akun? Daftar sekarang"
        android:onClick="signUpButton"
        android:clickable="true"/>

</LinearLayout>