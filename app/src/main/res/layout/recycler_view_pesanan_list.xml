<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/border_rounded_edit_text"
    android:id="@+id/incoming_order_RL">

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/greenPrimary"/>

    <TextView
        android:id="@+id/jam_pesanan_TV"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:text="09:00 - 11:00"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_toRightOf="@id/jam_pesanan_TV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_type_TV"
            android:textStyle="bold"
            android:textColor="@color/greenPrimary"
            android:textSize="12sp"
            android:maxWidth="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marliana - Cuci Kering"/>
        <TextView
            android:id="@+id/address_TV"
            android:textSize="12sp"
            android:maxWidth="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toko Duta Motor, Serang"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/nav_next"/>

</RelativeLayout>