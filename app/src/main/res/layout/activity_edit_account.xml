<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bantoo.babooo.Pages.HomePage.AccountPage.EditAccountActivity">

    <!--Header-->
    <LinearLayout
        android:id="@+id/header_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close_edit_IV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/asset_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Ubah Profil"
                    android:textColor="@color/greenPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_photo_account_edit"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/asset_maid"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A" />
        <ImageView
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/profile_photo_account_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/asset_cam"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_name_TV_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_marginRight="40dp">
        <TextView
            android:textColor="@color/greenPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Handphone"/>
        <EditText
            android:id="@+id/phoneNumber_ET_edit_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08129313123132"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_marginRight="40dp">
        <TextView
            android:textColor="@color/greenPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"/>
        <EditText
            android:id="@+id/address_ET_edit_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Binus University, Anggrek Campus, Palmerah, Jakarta Barat"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_marginRight="40dp">
        <TextView
            android:textColor="@color/greenPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"/>
        <EditText
            android:id="@+id/email_ET_edit_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email.com"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_marginRight="40dp">
        <TextView
            android:textColor="@color/greenPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kata Sandi"/>
        <EditText
            android:id="@+id/password_ET_edit_account"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*********"/>
    </LinearLayout>

    <Button
        android:id="@+id/saveButton_edit_account"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_green"
        android:text="Simpan"
        android:textColor="@color/white" />

</LinearLayout>
