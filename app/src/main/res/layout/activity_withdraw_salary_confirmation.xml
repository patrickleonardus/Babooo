<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bantoo.babooo.Pages.MaidPages.WithdrawSalaryConfirmationActivity">

    <!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close_withdraw_salary"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/asset_close" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Konfirmasi Penarikan Gaji"
                    android:textColor="@color/greenPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Pengajuan"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nomor_pengajuan_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COVID-19"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Tanggal Pengajuan"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tanggal_pengajuan_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="2 Maret 2020"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah koin yang ditarik"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/drawable_start_coins_edit_text"/>
        <TextView
            android:id="@+id/coins_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="300 Koin"
            android:textStyle="bold"
            android:textSize="26sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Nominal dalam Rupiah"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/rupiah_nominal_TV"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 270.000"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Admin Bantoo"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan kode admin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:id="@+id/code1_withdraw_ET"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_edit_text"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/code2_withdraw_ET"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_edit_text"
            android:clickable="false"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/code3_withdraw_ET"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_edit_text"
            android:clickable="false"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/code4_withdraw_ET"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_edit_text"
            android:clickable="false"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/code5_withdraw_ET"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_edit_text"
            android:clickable="false"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/code6_withdraw_ET"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_edit_text"
            android:clickable="false"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_rounded_yellow"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penting!"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/quantum_yellow800"
            android:textSize="11sp"
            android:textStyle="bold"
            android:text="Kunjungi kantor Bantoo untuk melakukan penarikan. Mintalah Admin Bantoo untuk memasukkan kode pada perangkat anda untuk memproses penarikan gaji dalam bentuk uang."/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/withdraw_coins_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_green"
            android:text="Ajukan penarikan gaji"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
