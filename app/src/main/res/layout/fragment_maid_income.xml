            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_rounded_edit_text"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pendapatan_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="PENDAPATAN HARI INI"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/coins_logo_hari_ini_IV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/drawable_start_coins_edit_text" />

                    <TextView
                        android:id="@+id/koin_harian_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="270 koin"
                        android:textColor="@color/greenPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pendapatan_PB"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:max="100"
                    android:progress="50"
                    android:progressBackgroundTint="@color/orangePrimaryDark"
                    android:progressTint="@color/greenPrimary"
                    android:scaleY="3" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/percentageTarget_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="75%"
                        android:textColor="@color/greenPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/target_koin_harianTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="target: 360 koin"
                        android:textColor="@color/greenPrimary" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_rounded_edit_text"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="PENILAIAN"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1_IV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/asset_star_active" />

                    <ImageView
                        android:id="@+id/star2_IV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/asset_star_active" />

                    <ImageView
                        android:id="@+id/star3_IV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/asset_star_active" />

                    <ImageView
                        android:id="@+id/star4_IV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/asset_star_active" />

                    <ImageView
                        android:id="@+id/star5_IV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/asset_star_active" />

                    <TextView
                        android:id="@+id/rating_maid_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="5.0" />
                </LinearLayout>
            </RelativeLayout>
