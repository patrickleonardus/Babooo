<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".Controller.InputKodeRegistrasiActivity">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/verif_asset"/>

    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="78px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Akun"/>

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="36px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan kode pendaftaran mitra anda"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/layoutCode">
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:id="@+id/code1ET"
            android:background="@drawable/edit_text_border"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:clickable="false"
            android:maxLength="1"
            android:maxLines="1"
            android:id="@+id/code2ET"
            android:background="@drawable/edit_text_border"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:maxLines="1"
            android:clickable="false"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:id="@+id/code3ET"
            android:background="@drawable/edit_text_border"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:clickable="false"
            android:id="@+id/code4RT"
            android:background="@drawable/edit_text_border"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:clickable="false"
            android:maxLength="1"
            android:id="@+id/code5ET"
            android:background="@drawable/edit_text_border"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:clickable="false"
            android:textAlignment="center"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            android:id="@+id/code6ET"
            android:background="@drawable/edit_text_border"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/prevButton_koderes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/nav_left"
            android:layout_gravity="left"/>

        <ImageButton
            android:id="@+id/nextButton_koderes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/nav_right"
            android:layout_gravity="right"/>

    </FrameLayout>

</LinearLayout>